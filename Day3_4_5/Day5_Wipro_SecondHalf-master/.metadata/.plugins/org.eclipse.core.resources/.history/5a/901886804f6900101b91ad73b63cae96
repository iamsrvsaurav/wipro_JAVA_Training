package synch;
class TwoStrings{
	static void print(String str1,String str2) {
		System.out.println(str1);
		try {
			System.out.println(str2);
			Thread.sleep(1000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
class PrintStringThread1 implements Runnable{
	Thread thread;
	String str1;
	String str2;
	public PrintStringThread1(String str1,String str2) {
		this.str1 = str1;
		this.str2 = str2;
		thread = new Thread(this);
		thread.start();
	}
	@Override
	public void run() {
		TwoStrings.print(str1, str2);
		
	}
	
}
public class SyncThread1 {

	public static void main(String[] args) {
		new PrintStringThread1("Hello", "there");
		new PrintStringThread1("How are", "you");
		new PrintStringThread1("Thank you","very much");

	}

}
