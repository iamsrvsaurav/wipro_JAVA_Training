package com.model;



import java.util.HashMap;
import java.util.Map;

public class FlightService {
    private Map<String, Integer> flightSeats; // flightId -> available seats

    public void setFlightSeats(Map<String, Integer> flightSeats) {
        this.flightSeats = flightSeats;
    }

    public boolean isSeatAvailable(String flightId) {
        Integer seats = flightSeats.get(flightId);
        return seats != null && seats > 0;
    }

    public void bookSeat(String flightId) {
        if (isSeatAvailable(flightId)) {
            flightSeats.put(flightId, flightSeats.get(flightId) - 1);
        }
    }
}
